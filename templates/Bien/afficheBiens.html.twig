{% extends 'layout.html.twig' %}

{% block title %}Bien {{ bien.bnId }} {{ bien.nomUsage }}{% endblock %}

{% block main %}
    <main class="container">
        <h1>Bien {{ bien.bnId }} {{ bien.nomUsage }}</h1>
          <div class="card-group row">
                <div class="card col-4" style="width: 18rem;">
                    {%  if bien.photo %}
                        <img class="card-img-top" src="{{  asset('images/biens/'~ bien.photo) }}" alt="Card image cap">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ bien.nomUsage }}</h5>
                        <p class="card-text">{{ bien.descrAcces | slice(0,100) }}...</p>
                        <p class="card-text"> </p>
                        <p class="card-text"> </p>
                        <p class="card-text"> ad1 {{ bien.ad1 }}</p>
                        {%  if  bien.ad2  %}  <p class="card-text"> ad2 {{ bien.ad2 }}</p>{%  endif %}
                        {%  if  bien.ad3  %}  <p class="card-text"> ad3 {{ bien.ad3 }}</p>{%  endif %}
                        {%  if  bien.cp or bien.ville  %}
                            <p class="card-text">     {{ bien.cp }} {{ bien.ville }}</p>
                        {%  endif %}
                        <p class="card-text"> propriétaire :
                            {%  if bien.proprietaire %}
                                {{ bien.proprietaire.clprenom}} {{ bien.proprietaire.clNom}} {{ bien.proprietaire.clRaisonsociale}}
                            {%  else %} Non renseigné, (incroyable...)
                            {% endif %}
                        </p>
                        <a href="{{ path('app_bien_biendetail',{nobien: bien.bnId}) }}" class="btn btn-primary">Voir le projet</a>
                        <a href="{{ path('app_bien_modif_bien',{id: bien.bnId}) }}" class="btn btn-warning">Modifier</a>
                        <a href="{{ path('app_bien_del_bien',{id: bien.bnId}) }}" class="btn btn-danger">Supprimer</a>
                    </div>
                </div>
          </div>
    </main>
{% endblock %}